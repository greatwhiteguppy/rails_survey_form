<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>
<div id="user">
    <form action ="/result" method="post">
        <input name="authenticity_token" value="<%=form_authenticity_token%>" type="hidden">
        <h3>Your Name: <input type="text" name="user[name]" placeholder="Name"/></h3>
        <h3>Dojo Location:<select name="user[location]">
          <option value="Mountain View">Mountain View</option>
          <option value="Chicago">Chicago</option>
          <option value="New York">New York</option>
          <option value="Seattle">Seattle</option>
      </select></h3>
        <h3>Favorite Language: <select name="user[language]">
          <option value="javascript">JavaScript</option>
          <option value="python">Python</option>
          <option value="ruby">Ruby</option>
          <option value="php">PHP</option>
        </select></h3>
        <h3>Comment (optional):</h3> <textarea name="user[comment]" rows="5" cols="40"></textarea>
        <input type="submit" id="survey_submit" value="Submit"/>
    </form>
</div>
